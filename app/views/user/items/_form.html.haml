.row
  .col-sm-6
    = simple_form_for [ :user, @item ], html: { class: 'form-horizontal' } do |f|
      .form-inputs
        = f.input :title, input_html: { class: 'form-control' }
        = f.input :contents, input_html: { class: 'form-control', rows: 20 }
        = f.button :submit, class: 'btn btn-primary'

  .col-sm-6
    %h2= @item.title